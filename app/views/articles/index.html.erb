<div class="container">
<div class="row">

<div class="col-lg-12 order-2 order-lg-1">
	<div class="row">
<% @articles.each do |article| %>
<div class="col-sm-4 mb-4">
            <article class="card border-0 rounded-0 position-relative box-shadow zindex-1">
              <div class="card-type">Article</div>
<% if article.article_image.present? %>
   <%= image_tag article.article_image.url, class: "card-img-top rounded-top-0 clip-half-cycle",style: "height: 250px;" %>
   <% else %>
   <img class="card-img-top rounded-top-0 clip-half-cycle" src="/assets/No_Image.png" alt="Card image cap", style=  "height: 250px;" >
  <% end %>

  <%# byebug %>            
              <div class="card-body">
                <div class="title-border-left">
                  <div class="card-meta text-uppercase mb-2">by <strong class="text-dark"><%= article.user.name.present? ? article.user.name : "Admin"  %></strong>/ on <strong class="text-dark"><%= article.created_at.strftime("%d %b, %Y") %></strong></div>
                  <h4 class="card-title article_title"><%= link_to article.title, article_path(article),class: "text-dark" %></h4>
                </div>
                <p class="card-text ptext "><%= article.body.present? ? article.body.truncate_words(25) : "" %></p>
                
                <%= link_to 'read more'.html_safe, article_path(article),class: "btn btn-secondary btn-arrow" %>
              </div>
            </article>
          </div>

<% end %>

</div>
</div>



</div>
</div>






